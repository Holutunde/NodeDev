<%- include ('../partials/header') -%>
<div class="container">
            <h2 style="text-align: center">Edit <%=commentfound.name%></h2>
            <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%=campground._id%>/comments/<%= commentfound._id %>?_method=PUT" method="POST">
                  <div class="form-group">
                        
                        <input class="form-control" type='text' name='comment[text-right]' value="<%= commentfound.text%>">
                  </div>
                  <div class="form-group">
                        
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                  </div>
            </form>
            <a href="/campgrounds">Go Back</a>
      </div>
  
</div>

