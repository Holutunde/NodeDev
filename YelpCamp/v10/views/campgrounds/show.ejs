<%- include ('../partials/header') -%>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
                
            </div>
        </div>
        <div class="col-md-9">
            <div class="card" style="padding: 10px;">
                <img class="img-responsive" src="<%=campfound.image%>"%>
                <div class="caption-full">
                <div class="name-cont">              
                    <h3><%=campfound.name%></h3>
                    <h5 class="pull-right">$9.00/night</h5>
                </div>
                    <p><%=campfound.description%></p>
                    <p>
                        <em>
                            Submitted By <%=campfound.author.username%>
                        </em>
                    </p>
                    <div>
                      <a class="btn btn-warning" href="/campgrounds/<%=campfound._id%>/edit">Edit</a>
                      <form id="delete-form" action="/campgrounds/<%= campfound._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">DELETE</button>   
                    </form> 
                    </div>
                </div>
            </div>
            <div style="margin-left: 30px;">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%=campfound._id%>/comments/new">Add New Comment</a>
                </div>
                <div>

                    <hr>
                </div>
                <div >           
                <% campfound.comments.forEach(function(comment){%>
                    <div class="row">
                        <div class="col-md-12">
                            <div style="display: flex; justify-content: space-between;"> 

                                <h4><%=comment.author.username %></h4>
                                <h5 class="pull-right">10 days ago</h5>
                            </div>
                            <p>
                                <%=comment.text%>
                            </p>
                        </div>
                    </div>
                 
             <%})%>
            </div>
            </div>
        </div>
    </div>
</div>






<%- include ('../partials/footer') -%>